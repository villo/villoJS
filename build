
echo "Building villo.js"

cd ./core
cat core.js analytics.js bridge.js chat.js clipboard.js feeds.js friends.js gift.js init.js leaders.js messages.js presence.js profile.js settings.js states.js storage.js user.js > ../villo.js

cd ../utils
cat ajax.js app.js do.js e.js extend.js hooks.js log.js slashes.js sync.js end.js >> ../villo.js

cd ..

jsmin <villo.js >villo.min.js "Copyright (c) 2012 Villo Services"

cd ../utils
cat dependencies.js >> ../villo.js
cat dependencies.js >> ../villo.min.js

echo "Done building villo.js"